include ../partials/header.pug
h1 Qui prend quoi ?
h2 Créer un événement
form(method="post" action="/party")
  div
    label(for="name") Nom de l'événement
    input(name="name" id="name" required minlength="3" placeholder="Nouvel an")
    br
    label(for="nameAuthor") Nom de l'auteur
    input(name="name" id="nameAuthor" required minlength="3" placeholder="Auteur")
    br
    label(for="date") Date
    input(type="date" name="date" id="date" min="2020-03-17")
  button(type="submit") Créer